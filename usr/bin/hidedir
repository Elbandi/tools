#!/bin/bash

declare -a dirs
declare -A dirs_k=()
declare -a types
declare -A types_k

hidemount()
{
	echo hide $1 >&2
	umount -i "$1"
	if [ $? != 0 -a -d "$1" ]
	then
		local emptydir
		if [ -d /var/run/empty ]
		then
			emptydir=/var/run/empty
		elif [ -d /var/empty ]
		then
			emptydir=/var/empty
		else
			mkdir /var/run/empty
			emptydir=/var/run/empty
		fi
		mount -o bind "$emptydir" "$1"
		if [ $? != 0 ]
		then
			echo "Unable to hide \`$1'. Exiting." >&2
			exit 2
		fi
	fi
}

getoptions()
{
	netdev=0
	dirs=()
	types=()
	types_k=()
	inner=0
	
	while [ -n "$1" ]
	do
		case "$1" in
		--help|-h|'')
			echo "Usage: $0 [--netdev] [--dir DIR1:DIR2:...] [--fstype TYPE1,TYPE2,...] [cmd [args...]]" >&2
			exit 1
			;;
		--netdev)
			netdev=1
			;;
		--dir)
			shift
			dirs=(${1//:/ })
			;;
		--fstype)
			shift
			types=(${1//,/ })
			for t in "${types[@]}"
			do
				types_k["$t"]=1
			done
			;;
		-u)
			inner=1
			;;
		--)
			shift
			break
			;;
		-*)
			echo "Unknown option: $1" >&2
			exit 1
			;;
		*)
			break
			;;
		esac
		shift
	done
	
	cmdargs=("$@")
}


myargs=("$@")
getoptions "$@"


if [ $inner = 0 ]
then
	exec unshare -m -- $0 -u "${myargs[@]}"
	exit
fi


if [ ${#dirs[@]} = 0 -a ${#types[@]} = 0 ]
then
	netdev=1
fi

for d in "${dirs[@]}"
do
	dirs_k["$d"]=1
done

while read mntdev mntpnt mntype mntopt rest
do
	if [ $netdev = 1 ] && [[ "$mntdev" =~ ^// ]] || [[ "$mntdev" =~ : ]]
	then
		dirs_k["$mntpnt"]=1
	fi
	if [ -n "$mntype" ]
	then
		if [ "${types_k[$mntype]}" = 1 ]
		then
			dirs_k["$mntpnt"]=1
		else
			for typepatt in "${types[@]}"
			do
				typepatt=${typepatt//./\\.}
				typepatt=${typepatt//\*/.*}
				typepatt=${typepatt//\?/.}
				if [[ "$mntype" =~ ^$typepatt$ ]]
				then
					dirs_k["$mntpnt"]=1
				fi
			done
		fi
	fi
done </proc/mounts

for d in "${!dirs_k[@]}"
do
	hidemount "$d"
done


exec "${cmdargs[@]}"
